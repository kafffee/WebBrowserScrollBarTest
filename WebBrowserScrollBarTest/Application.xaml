<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WebBrowserScrollBarTest"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/Resources/MeinScrollbar.xaml"/>

            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="VordergrundfarbeBrush">#816D4F</SolidColorBrush>
            <SolidColorBrush x:Key="BackgroundScrollBars" Color="{DynamicResource Vordergrundfarbe}" Opacity="0.5"/>
            <Color x:Key="Vordergrundfarbe">#816D4F</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
